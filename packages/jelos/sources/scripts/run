#!/bin/bash
# SPDX-License-Identifier: Apache-2.0
# Copyright (C) 2020-present Fewtarius

. /etc/profile

RUN=$(echo ${1} | sed 's# #\\ #g')

if [ "${UI_SERVICE}" = "weston.service" ]
then
  weston-terminal --command="${RUN}"
else
  systemctl stop ${UI_SERVICE}
  clear
  "$*" >/dev/console 2>&1
  clear
fi
if [ ! "${UI_SERVICE}" = "weston.service" ]
then
  systemctl start ${UI_SERVICE}
fi
