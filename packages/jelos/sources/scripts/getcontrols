IFS=""
CONTROLS=$(amixer controls | sed -e 's#^.*name=##g' -e "s#'##g")

for CONTROL in "${CONTROLS[@]}"
do
  echo ${CONTROL} | awk '{print $1}' | grep -v -E 'Mic|Extension|Capture|Differential|Left|Right' | uniq
done
echo "--------"
for CONTROL in "${CONTROLS[@]}"
do
  echo ${CONTROL}
done
